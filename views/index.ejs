<%- include('partials/head'); -%>

    <body>
        <header class="pb-4">
            <%- include('partials/nav_bar'); -%>
        </header>
        <div class="container">
            <p class="text-uppercase">Perguntas: <%= questions.length %></p>
            <a href="/questions" class="btn btn-primary mt-4 mb-4">Perguntar</a>
            <% questions.forEach(question=> { %>
                <div class="card mb-3 border border-success">
                    <div class="card-body">
                        <%= question.title %>
                    </div>
                    <div class="card-footer">
                        <a href="/question/<%= question.id %>" class="btn btn-success">Responder</a>
                    </div>
                </div>
                <%})%>
        </div>
        <%- include('partials/footer'); -%>